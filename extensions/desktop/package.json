{
  "name": "riot-launcher",
"repository": {
    "type": "git",
    "url": "https://github.com/Barkolores/RIOT-VS-Code-Extension.git"
  },  "displayName": "RIOT Launcher",
  "description": "Through this extension the user will be able to build, flash and enter the RIOT console via the User Interface of VS-Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "out/RIOT-VS-Code-Extension/extensions/desktop/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "riot-launcher.riotFlash",
        "title": "RIOT Flash",
        "icon": "$(zap)"
      },
      {
        "command": "riot-launcher.riotTerm",
        "title": "RIOT Term",
        "icon": "$(terminal)"
      },
      {
        "command": "riot-launcher.riotDebug",
        "title": "RIOT Debug",
        "icon": "$(bug)" 
      },
      {
        "command": "riot-launcher.selectBoard",
        "title": "RIOT Board Selection"
      },
      {
        "command": "riot-launcher.detectPorts",
        "title": "RIOT Detect Ports"
      },
      {
        "command": "riot-launcher.changeDescriptionDevice",
        "title": "Change Device Description"
      },
      {
        "command": "riot-launcher.changeFolderDevice",
        "title": "Change Application Folder"
      },
      {
        "command": "riot-launcher.changePortDevice",
        "title": "Change Port",
        "icon": "$(gear)"
      },
      {
        "command": "riot-launcher.changeBoardDevice",
        "title": "Change Board",
        "icon": "$(circuit)"
      },
      {
        "command": "riot-launcher.forgetDevice",
        "title": "Forget Device",
        "icon": "$(trash)"
      },
      {
        "command": "riot-launcher.addDevice",
        "title": "Add Device",
        "icon": "$(plus)"
      }
    ],
    "configuration": {
      "title": "RIOT Launcher",
      "properties": {
        "riot-launcher.riotPath": {
          "type": "string",
          "default": "/path/to/your/riot",
          "description": "Path to the RIOT OS installation directory."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "riotContainer",
          "title": "RIOT",
          "icon": "./resources/icon.png"
        }
      ]
    },
    "views": {
      "riotContainer": [
        {
          "id": "riotView",
          "name": "Desktop Extension"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "riot-launcher.addDevice",
          "when": "view == riotView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "riot-launcher.riotFlash",
          "when": "view == riotView && viewItem == riot-device",
          "group": "inline"
        },
        {
          "command": "riot-launcher.riotDebug",
          "when": "view == riotView && viewItem == riot-device",
          "group": "inline"
        },
        {
          "command": "riot-launcher.riotTerm",
          "when": "view == riotView && viewItem == riot-device",
          "group": "inline"
        },
        {
          "command": "riot-launcher.forgetDevice",
          "when": "view == riotView && viewItem == riot-device",
          "group": "1_modification"
        },
        {
          "command": "riot-launcher.forgetDevice",
          "when": "view == riotView && viewItem == riot-device",
          "group": "1_modification"
        },
        {
          "command": "riot-launcher.changeDescriptionDevice",
          "when": "view == riotView && viewItem == riot-device",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/shelljs": "^0.8.17",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "serialport": "^13.0.0"
  }
}
