{
  "name": "riot-web-extension",
  "displayName": "RIOT Web Extension",
  "description": "flashing riot from a browser",
  "publisher": "Barkolores78",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "riot-web-extension.device.add",
        "title": "Add device",
        "icon": "$(add)"
      },
      {
        "command": "riot-web-extension.device.remove",
        "title": "Remove",
        "icon": "$(close)"
      },
      {
        "command": "riot-web-extension.device.rename",
        "title": "Rename",
        "icon": "$(pencil)"
      },
      {
        "command": "riot-web-extension.device.selectProject",
        "title": "Select active project",
        "icon": "$(folder)"
      },
      {
        "command": "riot-web-extension.device.selectBoard",
        "title": "Select board",
        "icon": "$(circuit-board)"
      },
      {
        "command": "riot-web-extension.device.term",
        "title": "Open Terminal",
        "icon": "$(terminal)"
      },
      {
        "command": "riot-web-extension.device.flash",
        "title": "Flash Device",
        "icon": "$(zap)"
      },
      {
        "command": "riot-web-extension.websocket.open",
        "title": "Open Websocket",
        "icon": "$(rss)"
      },
      {
        "command": "riot-web-extension.websocket.close",
        "title": "Close Websocket",
        "icon": "$(close)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "riot-sidebar",
          "title": "RIOT",
          "icon": "dist/assets/icons/riot-logo-R.svg"
        }
      ]
    },
    "views": {
      "riot-sidebar": [
        {
          "id": "riot-web-extension.view.devices",
          "name": "Connected Devices"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "riot-web-extension.device.remove",
          "when": "false"
        },
        {
          "command": "riot-web-extension.device.rename",
          "when": "false"
        },
        {
          "command": "riot-web-extension.device.term",
          "when": "false"
        },
        {
          "command": "riot-web-extension.device.flash",
          "when": "false"
        },
        {
          "command": "riot-web-extension.device.selectProject",
          "when": "false"
        },
        {
          "command": "riot-web-extension.device.selectBoard",
          "when": "false"
        },
        {
          "command": "riot-web-extension.websocket.open",
          "when": "riot-web-extension.context.websocketOpen == false"
        },
        {
          "command": "riot-web-extension.websocket.close",
          "when": "riot-web-extension.context.websocketOpen == true"
        }
      ],
      "view/title": [
        {
          "command": "riot-web-extension.device.add",
          "group": "navigation",
          "when": "view == riot-web-extension.view.devices"
        },
        {
          "command": "riot-web-extension.websocket.open",
          "group": "navigation",
          "when": "view == riot-web-extension.view.devices && riot-web-extension.context.websocketOpen == false"
        },
        {
          "command": "riot-web-extension.websocket.close",
          "group": "navigation",
          "when": "view == riot-web-extension.view.devices && riot-web-extension.context.websocketOpen == true"
        }
      ],
      "view/item/context": [
        {
          "command": "riot-web-extension.device.remove",
          "when": "view == riot-web-extension.view.devices && viewItem != descriptionItem && viewItem != boardItem && viewItem != folderItem && viewItem != portItem"
        },
        {
          "command": "riot-web-extension.device.rename",
          "when": "view == riot-web-extension.view.devices && viewItem != descriptionItem && viewItem != boardItem && viewItem != folderItem && viewItem != portItem"
        },
        {
          "command": "riot-web-extension.device.term",
          "when": "view == riot-web-extension.view.devices && viewItem != descriptionItem && viewItem != boardItem && viewItem != folderItem && viewItem != portItem",
          "group": "inline"
        },
        {
          "command": "riot-web-extension.device.flash",
          "when": "view == riot-web-extension.view.devices && viewItem != descriptionItem && viewItem != boardItem && viewItem != folderItem && viewItem != portItem",
          "group": "inline"
        },
        {
          "command": "riot-web-extension.device.selectProject",
          "when": "view == riot-web-extension.view.devices && viewItem == folderItem",
          "group": "inline"
        },
        {
          "command": "riot-web-extension.device.selectBoard",
          "when": "view == riot-web-extension.view.devices && viewItem == boardItem",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/extensionTests.js",
    "compile-web": "npm run check-types && npm run lint && node esbuild.js",
    "compile-web-production": "npm run check-types && npm run lint && node esbuild.js --production",
    "watch-web": "npm-run-all -p watch-web:*",
    "watch-web:esbuild": "node esbuild.js --watch",
    "watch-web:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. .",
    "package": "vsce package --allow-missing-repository"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@types/assert": "^1.5.11",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.0",
    "@types/w3c-web-serial": "^1.0.8",
    "@types/w3c-web-usb": "^1.0.13",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vscode/test-web": "^0.0.78",
    "@vscode/vsce": "^3.7.0",
    "assert": "^2.1.0",
    "esbuild": "^0.25.12",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.39.1",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "esptool-js": "^0.5.7",
    "shared": "../../shared"
  },
  "overrides": {
    "@vscode/vsce": {
      "js-yaml": "^4.1.1"
    }
  }
}
